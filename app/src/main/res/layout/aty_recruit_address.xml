<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
            android:id="@+id/recruit_address_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:swipe_mode="pullDownFromTop" />

        <TextView
            android:id="@+id/recruit_address_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无相关数据"
            android:textColor="#323232"
            android:textSize="34px"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>