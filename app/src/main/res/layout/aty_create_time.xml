<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/creat_start_t_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_white_pressed_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creat_start"
                style="@style/new_job_order_text"
                android:layout_weight="1"
                android:drawableRight="@color/white"
                android:text="最早创建时间" />

            <TextView
                android:id="@+id/creat_start_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dim_default_drawablepadding"
                android:drawableRight="@drawable/btn_enter"
                android:paddingRight="30px"
                android:text=""
                android:textColor="#333333"
                android:textSize="28px" />

        </LinearLayout>

        <View style="@style/divid" />

        <LinearLayout
            android:id="@+id/creat_end_t_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_white_pressed_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creat_end"
                style="@style/new_job_order_text"
                android:layout_weight="1"
                android:drawableRight="@color/white"
                android:text="最晚创建时间" />

            <TextView
                android:id="@+id/creat_end_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dim_default_drawablepadding"
                android:drawableRight="@drawable/btn_enter"
                android:paddingRight="30px"
                android:text=""
                android:textColor="#333333"
                android:textSize="28px" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>