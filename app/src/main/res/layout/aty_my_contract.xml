<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_contract_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/clr_main"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_jo_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的合同"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View style="@style/weight" />

            <TextView
                android:id="@+id/my_jo_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="15px"
                android:text="筛选"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
                android:id="@+id/my_contract_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:swipe_mode="both" />

            <TextView
                android:id="@+id/my_jo_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="暂无相关数据"
                android:textColor="#323232"
                android:textSize="34px"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
    <!-- -->
    <ScrollView
        android:id="@+id/my_contract_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <LinearLayout
            android:id="@+id/my_contract_screen_lay"
            android:layout_width="800px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52px"
                android:layout_marginTop="33px"
                android:paddingLeft="21px"
                android:text="筛选"
                android:textColor="#656565"
                android:textSize="30px"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:text="合同编号："
                    android:textColor="#323232"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/my_cont_noid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:inputType="number"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:text="关键词："
                    android:textColor="#323232"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/my_cont_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>


            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/my_cont_work_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="工作内容"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/my_cont_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxWidth="200px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text=""
                    android:textColor="#323232"
                    android:textSize="30px" />

            </LinearLayout>


            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/my_cont_start_date_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="合同开始日期" />

                <TextView
                    android:id="@+id/my_cont_start_date"
                    style="@style/new_job_order_text"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:paddingLeft="21px"
                    android:text="" />
            </LinearLayout>


            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/my_cont_end_date_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="合同截止日期" />

                <TextView
                    android:id="@+id/my_cont_end_date"
                    style="@style/new_job_order_text"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:paddingLeft="21px"
                    android:text="" />
            </LinearLayout>

            <View style="@style/divider" />

            <TextView
                style="@style/new_job_order_text"
                android:drawableRight="@color/white"
                android:paddingLeft="21px"
                android:text="单价区间" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/my_cont_min_price"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最低价"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <View
                    android:layout_width="22px"
                    android:layout_height="6px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:background="#aaaaaa" />

                <EditText
                    android:id="@+id/my_cont_max_price"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最高价"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>

            <View style="@style/divider" />

            <TextView
                style="@style/new_job_order_text"
                android:drawableRight="@color/white"
                android:paddingLeft="21px"
                android:text="合同金额区间" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/my_cont_min_money"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最低价"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <View
                    android:layout_width="22px"
                    android:layout_height="6px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:background="#aaaaaa" />

                <EditText
                    android:id="@+id/my_cont_max_money"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最高价"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                style="@style/divider"
                android:layout_marginTop="15px" />

            <LinearLayout
                android:id="@+id/my_jo_time_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text"
                    android:layout_width="240px"
                    android:background="@null"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="生效时间区间" />

                <View style="@style/weight" />

                <TextView
                    android:id="@+id/my_jo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="280px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:textColor="#333333"
                    android:textSize="28px" />

            </LinearLayout>

            <View style="@style/divider" />

            <View style="@style/weight" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/my_jo_sure"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="80px"
                android:text="确定" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/my_cont_clear"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px"
                android:text="清空搜索条件"
                app:buttonColor="#cccccc" />
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>