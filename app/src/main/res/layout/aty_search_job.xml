<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <cn.zero.android.common.view.banner.ConvenientBanner
        android:id="@+id/index_img"
        android:layout_width="match_parent"
        android:layout_height="374px"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/query_recruitment_information_tv"
            android:layout_width="330px"
            android:layout_height="220px"
            android:background="@drawable/img_7"/>

        <ImageView
            android:id="@+id/my_job_order_tv"
            android:layout_width="330px"
            android:layout_height="220px"
            android:layout_marginLeft="30px"
            android:background="@drawable/img_8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/already_rob_tv"
            android:layout_width="330px"
            android:layout_height="220px"
            android:background="@drawable/img_9" />

        <ImageView
            android:id="@+id/help_information_tv"
            android:layout_width="330px"
            android:layout_height="220px"
            android:layout_marginLeft="30px"
            android:background="@drawable/img_10" />
    </LinearLayout>

</LinearLayout>