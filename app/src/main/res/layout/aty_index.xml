<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/clr_main">

        <TextView
            android:id="@+id/index_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="@dimen/dim_default_drawablepadding"
            android:paddingLeft="30px"
            android:text="定位中"
            android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="自由人"
            android:textColor="@color/white"
            android:textSize="34px" />

        <RelativeLayout
            android:id="@+id/index_message"
            android:layout_width="108px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10px"
            android:paddingLeft="10px"
            android:paddingRight="30px">

            <View
                android:id="@+id/index_message_spot"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2px"
                android:layout_marginTop="6px"
                android:background="@drawable/index_message_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10px"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="30px" />

        </RelativeLayout>
    </RelativeLayout>

    <cn.zero.android.common.view.banner.ConvenientBanner
        android:id="@+id/index_img"
        android:layout_width="match_parent"
        android:layout_height="374px"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index_search"
            android:layout_width="330px"
            android:layout_height="240px"
            android:background="#5fe4bd"
            android:drawablePadding="21px"
            android:drawableTop="@drawable/icon_job"
            android:gravity="center_horizontal"
            android:paddingTop="35px"
            android:text="搜工作"
            android:textColor="@color/white"
            android:textSize="34px" />

        <TextView
            android:id="@+id/index_recruitment"
            style="@style/index_text"
            android:layout_marginLeft="30px"
            android:paddingTop="35px"
            android:background="#78b3f0"
            android:drawableTop="@drawable/icon_recruitment"
            android:text="招工" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="408px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/index_contract"
                style="@style/index_text"
                android:background="#ef7388"
                android:paddingTop="40px"
                android:drawableTop="@drawable/icon_contract"
                android:text="我的合同" />

            <ImageView
                android:id="@+id/index_help"
                android:layout_width="330px"
                android:layout_height="148px"
                android:layout_marginTop="20px"
                android:background="@drawable/img_4" />
        </LinearLayout>

        <TextView
            android:id="@+id/index_mine"
            style="@style/index_text"
            android:layout_height="408px"
            android:layout_marginLeft="30px"
            android:background="#a174f3"
            android:drawablePadding="60px"
            android:drawableTop="@drawable/icon_my"
            android:paddingTop="90px"
            android:text="个人中心" />

    </LinearLayout>
</LinearLayout>