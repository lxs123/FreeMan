<?xml version="1.0" encoding="utf-8"?>
<cn.zero.android.common.view.KeyboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160px"
        android:src="@drawable/icon_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160px"
        android:orientation="vertical"
        android:paddingLeft="65px"
        android:paddingRight="65px">

        <EditText
            android:id="@+id/register_psw"
            style="@style/style_default_text"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="25px"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:padding="15px"
            android:password="true"
            android:singleLine="true" />

        <View
            style="@style/divider"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_repsd"
                style="@style/style_default_text"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/icon_password_two"
                android:drawablePadding="25px"
                android:hint="再次输入密码"
                android:padding="15px"
                android:password="true"
                android:singleLine="true" />

        </LinearLayout>

        <View
            style="@style/divider"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请人编号"
                android:textColor="#333333"
                android:textSize="28px" />

            <EditText
                android:id="@+id/register_inviter"
                style="@style/style_default_text"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawablePadding="25px"
                android:hint="会员编号/手机号"
                android:inputType="number"
                android:maxLength="11"
                android:padding="15px"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/register_zxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15px"
                android:src="@drawable/btn_code" />
        </LinearLayout>

        <View
            style="@style/divider"
            android:background="#D3D3D3" />

        <cn.zero.android.common.view.FButton
            android:id="@+id/login"
            style="@style/style_default_fbtn"
            android:layout_marginTop="80px"
            android:text="注册" />
    </LinearLayout>
</cn.zero.android.common.view.KeyboardLayout>