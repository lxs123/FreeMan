<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
            android:id="@+id/collect_item_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:swipe_mode="both" />
        <TextView
            android:id="@+id/collect_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无相关数据"
            android:textColor="@color/clr_default_text"
            android:textSize="36px"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D9D9D9" />

    <LinearLayout
        android:id="@+id/collect_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/normal_white_pressed_gray"
            android:drawableLeft="@drawable/btn_unselect"
            android:drawablePadding="15px"
            android:gravity="center"
            android:paddingBottom="30px"
            android:paddingLeft="42px"
            android:paddingRight="20px"
            android:paddingTop="30px"
            android:text="全选"
            android:textColor="#323232"
            android:textSize="30px" />

        <View style="@style/weight" />

        <cn.zero.android.common.view.FButton
            android:id="@+id/confirmFBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="确认发布"
            android:textColor="#FFF"
            android:textSize="34px"
            app:buttonColor="#467CD4"
            app:cornerRadius="0px"
            app:shadowEnabled="false" />
    </LinearLayout>
</LinearLayout>
