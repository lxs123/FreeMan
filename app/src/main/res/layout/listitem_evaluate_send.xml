<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20px">

    <LinearLayout
        android:id="@+id/list_e_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="20px"
            android:paddingTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同编号："
                android:textColor="#4c4c4c"
                android:textSize="30px" />

            <TextView
                android:id="@+id/list_e_send_noid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/btn_enter"
                android:paddingRight="25px"
                android:text="123456789"
                android:textColor="#4c4c4c"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="20px"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作内容："
                android:textColor="#4c4c4c"
                android:textSize="30px" />

            <TextView
                android:id="@+id/list_e_send_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="30px"
                android:text="家政 房屋装修"
                android:textColor="#4c4c4c"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="22px"
            android:paddingLeft="20px"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同开始时间："
                android:textColor="#4c4c4c"
                android:textSize="30px" />

            <TextView
                android:id="@+id/list_e_send_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-12-12"
                android:textColor="#4c4c4c"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="15px">

        <cn.zero.android.common.view.shapeimageview.CircularImageView
            android:id="@+id/list_e_send_head"
            android:layout_width="68px"
            android:layout_height="68px"
            android:src="@drawable/icon_head" />

        <TextView
            android:id="@+id/list_e_send_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20px"
            android:text="tiaobo"
            android:textColor="#969696"
            android:textSize="24px" />

        <TextView
            android:id="@+id/list_e_send_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_gread"
            android:drawablePadding="15px"
            android:paddingRight="35px"
            android:text="好评"
            android:textColor="@color/clr_evaluate_high"
            android:textSize="24px" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_e_send_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="35px"
        android:paddingTop="24px"
        android:text="sadauishahfdasjjoijdfjdsjjijiad"
        android:textColor="#656565"
        android:textSize="24px" />

    <GridView
        android:id="@+id/list_e_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:horizontalSpacing="5px"
        android:numColumns="4"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="20px"
        android:verticalSpacing="5px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/list_e_send_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="20px"
        android:paddingRight="30px"
        android:text="2016-01-02"
        android:textColor="#656565"
        android:textSize="26px" />

    <View
        android:id="@+id/list_e_send_date_line"
        style="@style/divider" />

    <LinearLayout
        android:id="@+id/list_e_send_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:orientation="horizontal">

            <View style="@style/weight" />

            <TextView
                android:id="@+id/list_e_send_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="right|center_vertical"
                android:paddingLeft="30px"
                android:paddingRight="27px"
                android:text="修改"
                android:textColor="@color/clr_main"
                android:textSize="34px"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_e_send_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/text_bg"
            android:orientation="horizontal"
            android:paddingBottom="20px"
            android:paddingLeft="18px"
            android:paddingRight="18px"
            android:paddingTop="20px"
            android:visibility="visible">

            <TextView
                android:id="@+id/list_e_send_reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="taobao"
                android:textColor="#999999"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5px"
                android:text="回复："
                android:textColor="#999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/list_e_send_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="谢谢！期待下次合作"
                android:textColor="#999999"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_e_received_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:background="@drawable/text_bg"
            android:orientation="horizontal"
            android:paddingBottom="20px"
            android:paddingLeft="18px"
            android:paddingRight="18px"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5px"
                android:text="回复："
                android:textColor="#999999"
                android:textSize="28px" />


            <EditText
                android:id="@+id/list_e_received_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入回复内容(1-80字)"
                android:maxLength="80"
                android:maxLines="3"
                android:paddingRight="10px"
                android:text=""
                android:textColor="#999999"
                android:textSize="28px" />
        </LinearLayout>

        <TextView
            android:id="@+id/list_e_received_send"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:background="@drawable/normal_white_pressed_gray"
            android:gravity="right|center_vertical"
            android:paddingLeft="30px"
            android:paddingRight="27px"
            android:text="发送"
            android:textColor="@color/clr_main"
            android:textSize="34px"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_e_received_layouted"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/text_bg"
            android:orientation="horizontal"
            android:paddingBottom="20px"
            android:paddingLeft="18px"
            android:paddingRight="18px"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5px"
                android:text="回复："
                android:textColor="#999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/list_e_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="taobao"
                android:textColor="#999999"
                android:textSize="28px" />

            <TextView
                android:id="@+id/list_e_received_contented"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="谢谢！期待下次合作"
                android:textColor="#999999"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/list_e_lastview"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:visibility="gone" />
</LinearLayout>