<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical"
    tools:context="com.toocms.freeman.ui.index.LabourDetailAty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="242px"
        android:background="@drawable/img_twelve"
        android:gravity="center"
        android:orientation="vertical">

        <cn.zero.android.common.view.shapeimageview.CircularImageView
            android:id="@+id/header_detail_head"
            android:layout_width="118px"
            android:layout_height="118px"
            android:src="@drawable/icon_head"
            app:siBorderColor="#FFF"
            app:siBorderWidth="5px" />

        <TextView
            android:id="@+id/header_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="jingle"
            android:textColor="#323232"
            android:textSize="34px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingTop="20px">

            <TextView
                android:id="@+id/header_complains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#656565"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15px"
                android:text="投诉数量"
                android:textColor="#656565"
                android:textSize="28px" />
        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="72px"
            android:layout_gravity="center_vertical"
            android:background="@color/clr_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingTop="20px">

            <TextView
                android:id="@+id/header_breach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#656565"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15px"
                android:text="违约数量"
                android:textColor="#656565"
                android:textSize="28px" />
        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="72px"
            android:layout_gravity="center_vertical"
            android:background="@color/clr_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingTop="20px">

            <TextView
                android:id="@+id/header_dispute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#656565"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15px"
                android:text="纠纷合同数量"
                android:textColor="#656565"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_information_tv"
            android:layout_width="233px"
            android:layout_height="185px"
            android:background="#EF754E"
            android:drawablePadding="26px"
            android:drawableTop="@drawable/icon_base_fgt"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:text="基本信息"
            android:textColor="#FFF"
            android:textSize="30px" />

        <TextView
            android:id="@+id/header_skill_info"
            android:layout_width="233px"
            android:layout_height="185px"
            android:background="#58DDB8"
            android:drawablePadding="26px"
            android:drawableTop="@drawable/icon_skill_fgt"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:text="技能信息"
            android:textColor="#FFF"
            android:textSize="30px" />

        <TextView
            android:id="@+id/evaluate_info_tv"
            android:layout_width="233px"
            android:layout_height="185px"
            android:background="#EB7FD8"
            android:drawablePadding="26px"
            android:drawableTop="@drawable/icon_review_fgt"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:text="评价信息"
            android:textColor="#FFF"
            android:textSize="30px" />
    </LinearLayout>

    <View
        style="@style/divider"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/transaction_record_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_white_pressed_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="22px"
        android:paddingLeft="22px"
        android:paddingRight="20px"
        android:paddingTop="22px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_record"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:text="交易记录"
            android:textColor="#323232"
            android:textSize="30px" />

        <View style="@style/weight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="成交数量："
            android:textColor="#323232"
            android:textSize="30px" />

        <TextView
            android:id="@+id/header_cost_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="56"
            android:textColor="#1B59BD"
            android:textSize="30px" />


    </LinearLayout>

    <View
        style="@style/divider"
        android:background="#CCCCCC" />
</LinearLayout>
