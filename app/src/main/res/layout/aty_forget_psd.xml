<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="#FFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="40px"
            android:paddingLeft="32px"
            android:paddingRight="32px"
            android:paddingTop="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="#333333"
                android:textSize="28px" />

            <EditText
                android:id="@+id/forget_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="18212352614"
                android:paddingLeft="35px"
                android:textColor="#323232"
                android:textSize="28px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="40px"
            android:paddingLeft="32px"
            android:paddingRight="32px"
            android:paddingTop="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="28px" />

            <EditText
                android:id="@+id/forget_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="35px"
                android:textColor="#323232"
                android:textSize="28px" />

            <View
                android:layout_width="2px"
                android:layout_height="50px"
                android:background="#CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:text="60s重新获取"
                android:visibility="gone" />

            <TextView
                android:id="@+id/forget_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:text="获取验证码"
                android:textColor="#86A5E0"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <cn.zero.android.common.view.FButton
        android:id="@+id/forget_fbtn"
        style="@style/style_default_fbtn"
        android:layout_marginLeft="65px"
        android:layout_marginRight="65px"
        android:layout_marginTop="60px"
        android:text="立即验证" />


</LinearLayout>