<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="22px"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            style="@style/new_job_order_text_no_img"
            android:layout_width="wrap_content"
            android:text="新手机号" />

        <EditText
            android:id="@+id/c_p_n_new_phone"
            style="@style/new_job_order_text_no_img"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#FFF"

            android:hint="请输入新手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            style="@style/new_job_order_text_no_img"
            android:layout_width="wrap_content"
            android:text="验证码" />

        <EditText
            android:id="@+id/c_p_n_new_code"
            style="@style/new_job_order_text_no_img"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#FFF"
            android:inputType="number"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/c_p_n_new_get_code"
            style="@style/new_job_order_text_no_img"
            android:layout_width="235px"
            android:layout_marginLeft="15px"
            android:gravity="center"
            android:paddingLeft="0px"
            android:paddingRight="0px"
            android:singleLine="true"
            android:text="获取验证码"
            android:textColor="@color/clr_main" />
    </LinearLayout>

    <cn.zero.android.common.view.FButton
        android:id="@+id/c_p_n_sure"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="92px"
        android:text="确认"
        android:textColor="#FFF"
        android:textSize="32px"
        app:buttonColor="@color/clr_main"
        app:cornerRadius="10px"
        app:shadowEnabled="false" />
</LinearLayout>
