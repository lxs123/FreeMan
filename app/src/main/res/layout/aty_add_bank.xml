<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_wx_ali_content"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginBottom="200px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="#4d4d4d"
            android:textSize="28px" />

        <EditText
            android:id="@+id/add_wx_ali"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入您的微信账号"
            android:inputType="textPersonName"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:singleLine="true"
            android:textColor="#323232"
            android:textColorHint="#cccccc"
            android:textSize="32px" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/add_bank_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text="持卡人"
                android:textColor="#4d4d4d"
                android:textSize="28px" />

            <EditText
                android:id="@+id/add_bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="银行卡户名"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                android:textSize="32px" />
        </LinearLayout>

        <View style="@style/divid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text="卡号"
                android:textColor="#4d4d4d"
                android:textSize="28px" />

            <EditText
                android:id="@+id/add_bank_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="银行卡号"
                android:inputType="number"
                android:maxLength="19"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                android:textSize="32px" />
        </LinearLayout>


        <View style="@style/divid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#4d4d4d"
                android:textSize="28px" />

            <EditText
                android:id="@+id/add_bank_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="银行预留手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:textColor="#4d4d4d"
                android:textSize="32px" />
        </LinearLayout>

        <View style="@style/divid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_adddress_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="15px"
                android:paddingLeft="30px"
                android:paddingTop="15px"
                android:text="卡类型"
                android:textColor="#4d4d4d"
                android:textSize="28px" />

            <TextView
                android:id="@+id/add_bank_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:text=""
                android:textColor="@color/clr_main"
                android:textSize="28px" />

        </LinearLayout>


    </LinearLayout>


    <cn.zero.android.common.view.FButton
        android:id="@+id/add_b_sure"
        style="@style/fbtn_release_style"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="110px"
        android:text="确定" />
</LinearLayout>