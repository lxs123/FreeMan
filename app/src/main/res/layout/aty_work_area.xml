<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
            android:id="@+id/work_area_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:swipe_mode="pullDownFromTop" />

        <TextView
            android:id="@+id/work_area_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无相关数据"
            android:textColor="#323232"
            android:textSize="34px"
            android:visibility="gone" />

    </RelativeLayout>

    <View style="@style/divider" />

    <LinearLayout
        android:id="@+id/work_area_sel_content"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/work_area_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/normal_white_pressed_gray"
            android:drawableLeft="@drawable/btn_unselect"
            android:drawablePadding="@dimen/dim_default_drawablepadding"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="全选"
            android:textColor="@color/clr_default_text"
            android:textSize="30px" />

        <View style="@style/weight" />

        <cn.zero.android.common.view.FButton
            android:id="@+id/work_area_sure"
            style="@style/fbtn_release_style"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_marginRight="0px"
            android:text="确定"
            app:cornerRadius="0px" />
    </LinearLayout>
</LinearLayout>
