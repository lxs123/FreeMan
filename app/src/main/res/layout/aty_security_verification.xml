<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal">

            <TextView
                style="@style/new_job_order_text_no_img"
                android:layout_width="wrap_content"
                android:text="手机号码" />

            <TextView
                android:id="@+id/s_v_phone"
                style="@style/new_job_order_text_no_img"
                android:text="13512345678"
                android:textColor="#999999" />
        </LinearLayout>

        <View style="@style/divid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/new_job_order_text_no_img"
                android:layout_width="wrap_content"
                android:text="验证码" />

            <EditText
                android:id="@+id/s_v_code"
                style="@style/new_job_order_text_no_img"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="#FFF"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#999999" />

            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/s_v_get_code"
                style="@style/new_job_order_text_no_img"
                android:layout_width="235px"
                android:layout_marginLeft="15px"
                android:gravity="center"
                android:paddingLeft="0px"
                android:paddingRight="0px"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/clr_main" />
        </LinearLayout>
    </LinearLayout>

    <cn.zero.android.common.view.FButton
        android:id="@+id/s_v_fbtn"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="92px"
        android:text="立即验证"
        android:textColor="#FFF"
        android:textSize="32px"
        app:buttonColor="@color/clr_main"
        app:cornerRadius="10px"
        app:shadowEnabled="false" />
</LinearLayout>
