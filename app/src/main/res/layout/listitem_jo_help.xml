<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jo_help_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:text="1、"
            android:textColor="@color/clr_main"
            android:textSize="30px" />

        <TextView
            android:id="@+id/jo_help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:paddingBottom="30px"
            android:paddingRight="20px"
            android:paddingTop="30px"
            android:text="现场传照片有什么好处"
            android:textColor="@color/clr_main"
            android:textSize="30px" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/jo_help_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:paddingRight="20px"
        android:paddingTop="20px"
        android:text="浴室设计1、特殊墙体运用\n现代浴室设计越来越接近家居空间的设计，从而更加符合浴室家居化的流行趋势。本色木纹的墙纸经过特殊的处理，既能防水，同时还具有更好的美化效果。"
        android:textColor="#323232"
        android:textSize="26px" />
</LinearLayout>