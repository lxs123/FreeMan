<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_job_order_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/clr_main"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_jo_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动匹配招工单"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View style="@style/weight" />

            <TextView
                android:id="@+id/my_jo_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="15px"
                android:text="筛选"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="信用等级"
                    android:textColor="@color/clr_main"
                    android:textSize="30px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30px"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="距离优先"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30px"
                    android:background="#999999" />

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10px"
                        android:drawableRight="@drawable/btn_level"
                        android:gravity="center"
                        android:paddingBottom="20px"
                        android:paddingTop="20px"
                        android:text="金额"
                        android:textColor="#333333"
                        android:textSize="30px" />
                </LinearLayout>


                <View
                    android:layout_width="1px"
                    android:layout_height="30px"
                    android:background="#999999" />

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10px"
                        android:drawableRight="@drawable/btn_level"
                        android:gravity="center"
                        android:paddingBottom="20px"
                        android:paddingTop="20px"
                        android:text="工作日期"
                        android:textColor="#333333"
                        android:textSize="30px" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/take_title_view"
                android:layout_width="188px"
                android:layout_height="5px"
                android:layout_gravity="bottom"
                android:background="@color/clr_main" />

            <View style="@style/divider" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
                android:id="@+id/my_job_order_swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:swipe_mode="both" />

            <RelativeLayout
                android:id="@+id/null_Rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无相关信息"
                    android:textColor="#323232"
                    android:textSize="50px" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
    <!---->
    <ScrollView
        android:id="@+id/my_job_order_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <LinearLayout
            android:id="@+id/linlay"
            android:layout_width="850px"
            android:layout_height="match_parent"

            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52px"
                android:layout_marginTop="33px"
                android:paddingLeft="21px"
                android:text="筛选"
                android:textColor="#656565"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:text="关键词："
                    android:textColor="#323232"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/keywords_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLines="1"
                    android:paddingLeft="10px"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>


            <View style="@style/divider" />


            <LinearLayout
                android:id="@+id/my_jo_work_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="工作周历"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/my_jo_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:maxWidth="200px"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>


            <View style="@style/divider" />

            <TextView
                style="@style/new_job_order_text"
                android:drawableRight="@color/white"
                android:paddingLeft="21px"
                android:text="单价区间" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/min_price_edt"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最低价"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <View
                    android:layout_width="22px"
                    android:layout_height="6px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:background="#aaaaaa" />

                <EditText
                    android:id="@+id/max_price_edt"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最高价"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/my_jo_work_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="选择区域"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:paddingRight="30px"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/ll_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="工作"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/skill_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxWidth="200px"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>


            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/work_time_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="工作时间"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="300px"
                    android:paddingRight="30px"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text_no_img"
                    android:layout_width="wrap_content"
                    android:paddingLeft="21px"
                    android:text="资方是否提供工作期间的保险" />

                <View style="@style/weight" />

                <com.toocms.freeman.ui.FreeManToggle
                    android:id="@+id/is_insurance"
                    style="@style/toggle_btn_normal_style" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/my_jo_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text_no_img"
                    android:layout_width="wrap_content"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="资方是否提供工作期间的工作餐" />

                <View style="@style/weight" />

                <com.toocms.freeman.ui.FreeManToggle
                    android:id="@+id/is_dine"
                    style="@style/toggle_btn_normal_style" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text_no_img"
                    android:layout_width="wrap_content"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="资方是否提供工作期间的住宿" />

                <View style="@style/weight" />

                <com.toocms.freeman.ui.FreeManToggle
                    android:id="@+id/is_lodging"
                    style="@style/toggle_btn_normal_style" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text_no_img"
                    android:layout_width="wrap_content"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="资方是否提供工作期间的劳动工具" />

                <View style="@style/weight" />

                <com.toocms.freeman.ui.FreeManToggle
                    android:id="@+id/is_tool"
                    style="@style/toggle_btn_normal_style" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text_no_img"
                    android:layout_width="wrap_content"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="资方是否承担因工作产生的交通费" />

                <View style="@style/weight" />

                <com.toocms.freeman.ui.FreeManToggle
                    android:id="@+id/is_transportation_expenses"
                    style="@style/toggle_btn_normal_style" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/new_job_order_text_no_img"
                    android:layout_width="wrap_content"
                    android:drawableRight="@color/white"
                    android:paddingLeft="21px"
                    android:text="资方是否承担因工作产生的通讯费" />

                <View style="@style/weight" />

                <com.toocms.freeman.ui.FreeManToggle
                    android:id="@+id/is_correspondence"
                    style="@style/toggle_btn_normal_style" />

            </LinearLayout>

            <View style="@style/divider" />


            <cn.zero.android.common.view.FButton
                android:id="@+id/my_jo_sure"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="60px"
                android:text="确定" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/my_jo_i_s_clear"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px"
                android:text="清空搜索条件"
                app:buttonColor="#cccccc" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>