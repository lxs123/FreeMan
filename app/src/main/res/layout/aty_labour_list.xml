<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="20px"
                android:paddingTop="20px"
                android:text="成单量最多"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="30px"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="20px"
                android:paddingTop="20px"
                android:text="信用最高"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="30px"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="20px"
                android:paddingTop="20px"
                android:text="距离最近"
                android:textSize="28px" />


            <View
                android:layout_width="1px"
                android:layout_height="30px"
                android:background="#999999" />

            <LinearLayout
                android:id="@+id/labour_price_click"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16px"
                    android:drawableRight="@drawable/btn_level"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="单价"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>

        <!--<cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView-->
        <!--android:id="@+id/collect_item_swipe"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:swipe_mode="pullDownFromTop" />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
                android:id="@+id/collect_item_swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:swipe_mode="pullDownFromTop" />

            <TextView
                android:id="@+id/labour_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="暂无相关数据"
                android:textColor="@color/clr_default_text"
                android:textSize="36px"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


    <View style="@style/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/normal_white_pressed_gray"
            android:drawableLeft="@drawable/btn_unselect"
            android:drawablePadding="15px"
            android:gravity="center"
            android:paddingBottom="30px"
            android:paddingLeft="42px"
            android:paddingRight="25px"
            android:paddingTop="30px"
            android:text="全选"
            android:textColor="#323232"
            android:textSize="30px" />

        <View style="@style/weight" />

        <cn.zero.android.common.view.FButton
            android:id="@+id/confirmFBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="确认发布"
            android:textColor="#FFF"
            android:textSize="34px"
            app:buttonColor="#467CD4"
            app:cornerRadius="0px"
            app:shadowEnabled="false" />
    </LinearLayout>

</LinearLayout>
