<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/add_work_province_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_white_pressed_gray"
            android:orientation="horizontal">

            <TextView
                style="@style/new_job_order_text_no_img"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="省："
                android:textColor="#656565" />

            <TextView
                android:id="@+id/add_work_province"
                style="@style/new_job_order_text_no_img"
                android:background="@null"
                android:drawablePadding="20px"
                android:drawableRight="@drawable/btn_enter"
                android:text=""
                android:textColor="#323232" />

        </LinearLayout>

        <View style="@style/divid" />

        <LinearLayout
            android:id="@+id/add_work_city_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_white_pressed_gray"
            android:orientation="horizontal">

            <TextView
                style="@style/new_job_order_text_no_img"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="市："
                android:textColor="#656565" />

            <TextView
                android:id="@+id/add_work_city"
                style="@style/new_job_order_text_no_img"
                android:background="@null"
                android:drawablePadding="20px"
                android:drawableRight="@drawable/btn_enter"
                android:text=""
                android:textColor="#323232" />

        </LinearLayout>

        <View style="@style/divid" />

        <LinearLayout
            android:id="@+id/add_work_area_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_white_pressed_gray"
            android:orientation="horizontal">

            <TextView
                style="@style/new_job_order_text_no_img"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="区/县："
                android:textColor="#656565" />

            <TextView
                android:id="@+id/add_work_area"
                style="@style/new_job_order_text_no_img"
                android:background="@null"
                android:drawablePadding="20px"
                android:drawableRight="@drawable/btn_enter"
                android:text=""
                android:textColor="#323232" />

        </LinearLayout>

    </LinearLayout>

    <cn.zero.android.common.view.FButton
        android:id="@+id/add_work_sure"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="200px"
        android:text="保存"
        android:textColor="#FFF"
        android:textSize="32px"
        app:buttonColor="@color/clr_main"
        app:cornerRadius="10px"
        app:shadowEnabled="false" />
</LinearLayout>
