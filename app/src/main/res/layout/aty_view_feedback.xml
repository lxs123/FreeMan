<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedback_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical"
    tools:context="com.toocms.freeman.ui.index.LabourListAty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/clr_main"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="20px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="20px"
                    android:src="@drawable/btn_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看反馈"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <View style="@style/weight" />

                <TextView
                    android:id="@+id/feedback_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="15px"
                    android:text="筛选"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="成交量最多"
                    android:textColor="@color/clr_main"
                    android:textSize="28px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30px"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="信用最高"
                    android:textColor="#333333"
                    android:textSize="28px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30px"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="距离最近"
                    android:textColor="#333333"
                    android:textSize="28px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30px"
                    android:background="#999999" />

                <LinearLayout
                    android:id="@+id/feedback_price_click"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16px"
                        android:drawableRight="@drawable/btn_level"
                        android:gravity="center"
                        android:paddingBottom="20px"
                        android:paddingTop="20px"
                        android:text="单价"
                        android:textColor="#323232"
                        android:textSize="28px" />
                </LinearLayout>
            </LinearLayout>

            <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
                android:id="@+id/collect_item_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                app:swipe_mode="pullDownFromTop" />
        </LinearLayout>


        <View
            style="@style/divider"
            android:layout_marginTop="60px" />

        <LinearLayout
            android:id="@+id/v_feedback_btnlay"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View style="@style/weight" />

            <Button
                android:id="@+id/view_modify_details_btn"
                android:layout_width="wrap_content"
                android:layout_height="65px"
                android:layout_marginRight="20px"
                android:background="@drawable/btn_save"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="查看修改明细"
                android:textColor="#467cd4"
                android:textSize="32px" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/feedback_qianyue"
                style="@style/fbtn_release_style"
                android:text="签约" />
        </LinearLayout>

    </LinearLayout>
    <!--   -->
    <ScrollView
        android:id="@+id/feedback_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/v_feedback_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52px"
                android:layout_marginTop="33px"
                android:paddingLeft="21px"
                android:text="筛选"
                android:textColor="#656565"
                android:textSize="30px"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:text="关键词："
                    android:textColor="#323232"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/feedback_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px" />
            </LinearLayout>


            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/feedback_area_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingTop="20px"
                    android:text="工作地域"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <View style="@style/weight" />

                <TextView
                    android:id="@+id/feedback_area"
                    style="@style/new_job_order_text"
                    android:layout_width="wrap_content"
                    android:maxWidth="280px"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:id="@+id/my_jo_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_white_pressed_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingTop="20px"
                    android:text="技能"
                    android:textColor="#323232"
                    android:textSize="30px" />

                <View style="@style/weight" />

                <TextView
                    android:id="@+id/feedback_skill"
                    style="@style/new_job_order_text"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:maxWidth="280px"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>

            <View style="@style/divider" />

            <TextView
                style="@style/new_job_order_text"
                android:drawableRight="@color/white"
                android:paddingBottom="20px"
                android:paddingLeft="21px"
                android:text="单价区间" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/v_feedback_min"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最低价"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <View
                    android:layout_width="22px"
                    android:layout_height="6px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:background="#aaaaaa" />

                <EditText
                    android:id="@+id/v_feedback_max"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最高价"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>

            <View style="@style/divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="20px">

                <TextView
                    android:id="@+id/feedback_num"
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:layout_weight="1"
                    android:background="@drawable/sel_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="可提供人数符合"
                    android:textColor="@drawable/text_nor_black_check_white"
                    android:textSize="28px" />

                <View
                    android:layout_width="40px"
                    android:layout_height="1px" />

                <TextView
                    android:id="@+id/feedback_agree"
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:layout_weight="1"
                    android:background="@drawable/sel_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="同意招工条件"
                    android:textColor="@drawable/text_nor_black_check_white"
                    android:textSize="28px" />

            </LinearLayout>

            <View style="@style/divider" />


            <View style="@style/weight" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/v_feedback_sure"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="80px"
                android:text="确定" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/v_feedback_clear"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px"
                android:text="清空搜索条件"
                app:buttonColor="#cccccc" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
