<?xml version="1.0" encoding="utf-8"?><!--解除合同-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/new_job_order_text"
            android:drawableRight="@color/white"
            android:text="选择您解除合同的原因" />

        <View style="@style/divider" />

        <GridView
            android:id="@+id/relieve_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="auto_fit"
            android:orientation="horizontal"
            android:paddingLeft="10px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="30px"
            android:background="@drawable/text_bg"
            android:orientation="vertical">


            <EditText
                android:id="@+id/relieve_reason"
                android:layout_width="match_parent"
                android:layout_height="230px"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请描述您的解除合同原因(1-80)"
                android:maxLength="80"
                android:paddingLeft="18px"
                android:paddingRight="18px"
                android:paddingTop="20px"
                android:textColor="#656565"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/weight" />

    <View style="@style/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20px">

        <cn.zero.android.common.view.FButton
            android:id="@+id/relieve_fbtn_commit"
            style="@style/fbtn_release_style"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:text="提交" />

    </LinearLayout>
</LinearLayout>