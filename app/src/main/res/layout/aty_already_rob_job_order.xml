<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/already_rob_job_order_dl"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        tools:context=".ui.searchjob.AlreadyRobJobOrderAty">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/clr_main"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_jo_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:src="@drawable/btn_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已抢招工单"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <View style="@style/weight"/>

            <TextView
                android:id="@+id/my_jo_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="15px"
                android:text="筛选"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
                android:id="@+id/job_order_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:swipe_mode="both"/>

            <TextView
                android:id="@+id/null_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="暂无相关数据"
                android:textColor="#323232"
                android:textSize="34px"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/my_jo_screen_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <LinearLayout
            android:id="@+id/ch_layout"
            android:layout_width="850px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52px"
                android:layout_marginTop="33px"
                android:paddingLeft="21px"
                android:text="筛选"
                android:textColor="#656565"
                android:textSize="30px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:paddingLeft="21px"
                    android:text="关键词："
                    android:textColor="#323232"
                    android:textSize="30px"/>

                <EditText
                    android:id="@+id/keywords_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="21px"
                    android:textColor="#323232"
                    android:textSize="30px"/>
            </LinearLayout>

            <View style="@style/divider"/>

            <LinearLayout
                android:id="@+id/my_jo_work_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="工作"
                    android:textColor="#323232"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/my_jo_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:maxWidth="200px"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px"/>
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/my_jo_work"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/normal_white_pressed_gray"-->
            <!--android:drawablePadding="10px"-->
            <!--android:drawableRight="@drawable/btn_enter"-->
            <!--android:paddingBottom="30px"-->
            <!--android:paddingLeft="21px"-->
            <!--android:paddingRight="30px"-->
            <!--android:paddingTop="30px"-->
            <!--android:text="工作"-->
            <!--android:textColor="#323232"-->
            <!--android:textSize="30px" />-->

            <View style="@style/divider"/>

            <LinearLayout
                android:id="@+id/contract_starttime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="合同开始日期"
                    android:textColor="#323232"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/contract_starttime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px"/>
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/contract_starttime_tv"-->
            <!--style="@style/new_job_order_text"-->
            <!--android:paddingLeft="21px"-->
            <!--android:text="合同开始日期" />-->

            <View style="@style/divider"/>

            <LinearLayout
                android:id="@+id/contract_endtime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="合同截止日期"
                    android:textColor="#323232"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/contract_endtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px"/>
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/contract_endtime_tv"-->
            <!--style="@style/new_job_order_text"-->
            <!--android:paddingLeft="21px"-->
            <!--android:text="合同截止日期" />-->

            <View style="@style/divider"/>

            <LinearLayout
                android:id="@+id/gzdd_tv_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:drawablePadding="10px"
                    android:paddingBottom="30px"
                    android:paddingLeft="21px"
                    android:paddingRight="30px"
                    android:paddingTop="30px"
                    android:text="工作地点"
                    android:textColor="#323232"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/gzdd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/btn_enter"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="30px"/>
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/gzdd_tv"-->
            <!--style="@style/new_job_order_text"-->
            <!--android:paddingLeft="21px"-->
            <!--android:text="工作地点" />-->

            <View style="@style/divider"/>

            <TextView
                style="@style/new_job_order_text"
                android:drawableRight="@color/white"
                android:paddingLeft="21px"
                android:text="单价区间"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/min_price_edt"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最低价"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="28px"/>

                <View
                    android:layout_width="22px"
                    android:layout_height="6px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:background="#aaaaaa"/>

                <EditText
                    android:id="@+id/max_price_edt"
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最高价"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </LinearLayout>

            <View style="@style/divider"/>

            <TextView
                style="@style/new_job_order_text"
                android:drawableRight="@color/white"
                android:paddingLeft="21px"
                android:text="金额区间"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="10px"
                android:visibility="invisible">

                <EditText
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最低价"
                    android:textColor="#999999"
                    android:textSize="28px"/>

                <View
                    android:layout_width="22px"
                    android:layout_height="6px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:background="#aaaaaa"/>

                <EditText
                    android:layout_width="215px"
                    android:layout_height="56px"
                    android:background="@drawable/my_jo_editbg"
                    android:gravity="center"
                    android:hint="最高价"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </LinearLayout>

            <View
                style="@style/divider"
                android:layout_marginTop="15px"
                android:visibility="invisible"/>

            <cn.zero.android.common.view.FButton
                android:id="@+id/my_jo_sure"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="60px"
                android:text="确定"/>

            <cn.zero.android.common.view.FButton
                android:id="@+id/clear_fbtn"
                style="@style/fbtn_release_style"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginBottom="120px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px"
                android:text="清空搜索条件"
                app:buttonColor="#cccccc"/>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>
