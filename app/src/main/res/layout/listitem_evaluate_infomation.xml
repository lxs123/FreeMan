<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFF"
              android:orientation="vertical">

    <View
        style="@style/divider"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25px"
        android:paddingLeft="20px"
        android:paddingTop="32px">

        <TextView
            android:id="@+id/contract_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同编号：12099876890"
            android:textColor="#4C4C4C"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/job_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="工作内容：家政 房屋装修"
            android:textColor="#4C4C4C"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/contract_start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="合同开始时间：2016-12-12"
            android:textColor="#4C4C4C"
            android:textSize="30px"/>
    </LinearLayout>

    <View
        style="@style/divider"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingTop="16px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cn.zero.android.common.view.shapeimageview.CircularImageView
                android:id="@+id/header_cir"
                android:layout_width="65px"
                android:layout_height="65px"
                android:src="@drawable/icon_head"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="tianbeijing"
                android:textColor="#969696"
                android:textSize="24px"/>

            <View
                style="@style/weight"/>

            <TextView
                android:id="@+id/praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_gread"
                android:drawablePadding="15px"
                android:paddingRight="38px"
                android:text="好评"
                android:textColor="#F1473C"/>

        </LinearLayout>

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="40px"
            android:paddingTop="25px"
            android:text="这次的合作很愉快,希望我们下次还有机会合作,非常期待下次的合作!"
            android:textColor="#656565"
            android:textSize="24px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View style="@style/weight"/>

            <TextView
                android:id="@+id/comment_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25px"
                android:text="2016-07-13"
                android:textColor="#8A8A8A"
                android:textSize="24px"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/is_have_reply_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:background="#CCCCCC"
            style="@style/divider"/>

        <TextView
            android:id="@+id/reply_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="15px"
            android:background="@drawable/text_bg"
            android:textColor="#999999"
            android:padding="25px"
            android:textSize="28px"
            android:text="回复tianbeijing：谢谢！我也很期待下次的合作"/>
    </LinearLayout>

</LinearLayout>