<resources>
    <!--首页字体-->
    <style name="index_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">330px</item>
        <item name="android:layout_height">240px</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">34px</item>
        <item name="android:drawablePadding">21px</item>
        <item name="android:paddingTop">30px</item>
    </style>


    <!--默认文字颜色、字号与图片的间距-->
    <style name="style_default_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/clr_default_text</item>
        <item name="android:textSize">@dimen/dim_default_text</item>
        <item name="android:drawablePadding">@dimen/dim_default_drawablepadding</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--FButton按钮默认样式-->
    <style name="style_default_fbtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32px</item>
        <item name="buttonColor">@color/clr_main</item>
        <item name="cornerRadius">12px</item>
        <item name="shadowEnabled">false</item>
    </style>
    <!-- 新建订单页text（单条的textview） -->
    <style name="new_job_order_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/normal_white_pressed_gray</item>
        <item name="android:paddingRight">30px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:drawableRight">@drawable/btn_enter</item>
        <item name="android:drawablePadding">10px</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">30px</item>
    </style>
    <!--没有右边箭头的text-->
    <style name="new_job_order_text_no_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/normal_white_pressed_gray</item>
        <item name="android:paddingRight">30px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">30px</item>
    </style>
    <!--分割线-->
    <style name="divid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#e0e0e0</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
    </style>
    <!--dialog style  不知道有用没用-->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--list  item 常用的Text大小-->
    <style name="listitem_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">26px</item>
        <item name="android:paddingBottom">10px</item>
    </style>
    <!--保存按钮style-->
    <style name="btn_save_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65px</item>
        <item name="android:minWidth">160px</item>
        <item name="android:background">@drawable/btn_save</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/clr_main</item>
        <item name="android:textSize">32px</item>
    </style>
    <!--  fbtn_发布style-->
    <style name="fbtn_release_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65px</item>
        <item name="android:minWidth">160px</item>
        <!--<item name="android:paddingLeft">45px</item>-->
        <!--<item name="android:paddingRight">45px</item>-->
        <item name="android:layout_marginRight">20px</item>
        <item name="buttonColor">@color/clr_main</item>
        <item name="cornerRadius">10px</item>
        <item name="shadowEnabled">false</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">"发布"</item>
    </style>
    <!--橘黄色小提示框-->
    <style name="prompt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FCFBCC</item>
        <item name="android:padding">20px</item>
        <item name="android:textColor">#FF9D4E</item>
        <item name="android:textSize">26px</item>
        <item name="android:gravity">center</item>
    </style>
    <!--修改招工单item-->
    <style name="modify_details_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">30px</item>
    </style>

    <!--筛选每行的样式-->
    <style name="screen_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">32px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">30px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:background">@drawable/normal_white_pressed_gray</item>
        <item name="android:drawableRight">@drawable/btn_enter</item>
    </style>

    <style name="toggle_btn_style">
        <item name="android:layout_width">85px</item>
        <item name="android:layout_height">45px</item>
        <item name="offColor">#FFD9DAD9</item>
        <item name="android:layout_marginRight">35px</item>
        <item name="onColor">@color/clr_main</item>
        <item name="spotColor">@color/white</item>
        <item name="toggleBorderWidth">1px</item>
    </style>

    <style name="toggle_btn_normal_style">
        <item name="android:layout_width">85px</item>
        <item name="android:layout_height">45px</item>
        <item name="offColor">#FFD9DAD9</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="onColor">@color/clr_main</item>
        <item name="spotColor">@color/white</item>
        <item name="toggleBorderWidth">1px</item>
    </style>
    <!--修改toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownVerticalOffset">15px</item>
        <item name="overlapAnchor">false</item>  <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
